---
import { getImage } from "astro:assets";

import { Category } from "@/config";

import SectionLayout from "../../_layouts/section-layout.astro";
import ShowcaseCarousel, { type ShowcaseItem } from "./showcase-carousel";

const SHOWCASE_ITEMS = [
    {
        title: "Detalles que perduran",
        category: Category.CLASSIC,
        image: await getImage({
            src: (await import("@/assets/imgs/showcase-clasicos.jpg")).default,
            format: "avif",
        }),
    },
    {
        title: "Innovación a la vista",
        category: Category.MODERN,
        image: await getImage({
            src: (await import("@/assets/imgs/showcase-modernos.jpg")).default,
            format: "avif",
        }),
    },
    {
        title: "Belleza en cada costura",
        category: Category.RESTORATION,
        image: await getImage({
            src: (await import("@/assets/imgs/showcase-restauracion.jpg"))
                .default,
            format: "avif",
        }),
    },
    {
        title: "Refinamiento a medida",
        category: Category.LUXURY,
        image: await getImage({
            src: (await import("@/assets/imgs/showcase-lujo.jpg")).default,
            format: "avif",
        }),
    },
    {
        title: "Calidad que trasciende",
        category: Category.VINTAGE,
        image: await getImage({
            src: (await import("@/assets/imgs/showcase-vintage.jpg")).default,
            format: "avif",
        }),
    },
] satisfies ShowcaseItem[];
---

<SectionLayout
    title="Últimas creaciones"
    subtitle="Proyectos exclusivos hechos con dedicación"
>
    <ShowcaseCarousel client:visible items={SHOWCASE_ITEMS} />
</SectionLayout>
