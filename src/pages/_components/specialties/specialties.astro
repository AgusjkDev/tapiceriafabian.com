---
import { getImage } from "astro:assets";

import { Category } from "@/config";

import SectionLayout from "../../_layouts/section-layout.astro";
import SpecialtiesCarousel, {
    type SpecialtyItem,
} from "./specialties-carousel";

const ITEMS = [
    {
        title: "Detalles que perduran",
        category: Category.CLASSIC,
        image: await getImage({
            src: (await import("@/assets/imgs/speciality-classic.jpg")).default,
            format: "avif",
        }),
    },
    {
        title: "Innovación a la vista",
        category: Category.MODERN,
        image: await getImage({
            src: (await import("@/assets/imgs/speciality-modern.jpg")).default,
            format: "avif",
        }),
    },
    {
        title: "Belleza en cada costura",
        category: Category.RESTORATION,
        image: await getImage({
            src: (await import("@/assets/imgs/speciality-restoration.jpg"))
                .default,
            format: "avif",
        }),
    },
    {
        title: "Refinamiento a medida",
        category: Category.LUXURY,
        image: await getImage({
            src: (await import("@/assets/imgs/speciality-luxury.jpg")).default,
            format: "avif",
        }),
    },
    {
        title: "Calidad que trasciende",
        category: Category.VINTAGE,
        image: await getImage({
            src: (await import("@/assets/imgs/speciality-vintage.jpg")).default,
            format: "avif",
        }),
    },
] satisfies SpecialtyItem[];
---

<SectionLayout
    title="Especialidades"
    subtitle="Proyectos exclusivos hechos con dedicación"
>
    <SpecialtiesCarousel client:visible items={ITEMS} />
</SectionLayout>
