---
import { Image } from "astro:assets";

import heroBgImage from "@/assets/imgs/hero-bg.jpg";
import { buttonVariants } from "@/components/ui/button";
import { contact } from "@/config";
---

<main class="relative h-dvh overflow-x-hidden">
    <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 3787 2842"
        class="pointer-events-none absolute -top-1/3 left-1/2 z-10 h-dvh -translate-x-1/2 rotate-[55deg] animate-spotlight select-none opacity-0"
    >
        <g filter="url(#filter)">
            <ellipse
                cx="1924.71"
                cy="273.50"
                rx="1924.71"
                ry="273.50"
                transform="matrix(-0.82 -0.57 -0.57 0.82 3631.88 2291.09)"
                fill="#ffffff"
                fill-opacity="0.20"
            >
            </ellipse>
        </g>
        <defs>
            <filter
                id="filter"
                x="0.86"
                y="0.84"
                width="3785.16"
                height="2840.26"
                filterUnits="userSpaceOnUse"
            >
                <feFlood flood-opacity="0"></feFlood>
                <feBlend in="SourceGraphic"></feBlend>
                <feGaussianBlur stdDeviation="180"></feGaussianBlur>
            </filter>
        </defs>
    </svg>

    <Image
        alt="Auto deportivo color plata"
        src={heroBgImage}
        format="avif"
        class="pointer-events-none absolute -z-20 h-full select-none object-cover brightness-[0.33]"
    />

    <section
        class="flex h-full animate-fade-in-down flex-col items-center justify-center gap-y-8 p-4"
    >
        <h1
            class="text-center text-5xl font-black tracking-tight md:text-6xl xl:text-7xl"
        >
            Tapicería Fabián
        </h1>
        <h2
            class="text-center text-3xl font-black md:text-4xl md:leading-tight xl:text-5xl"
        >
            Creando interiores <div
                class="relative grid h-9 w-full animate-flip place-items-center md:h-[45px] xl:h-12 [&>span]:absolute [&>span]:shadow-primary [&>span]:[backface-visibility:hidden] [&>span]:[text-shadow:2px_2px_4px_var(--tw-shadow-color)]"
                style={{ transformStyle: "preserve-3d" }}
            >
                <span style={{ transform: "rotateX(0) translateZ(20px)" }}>
                    únicos
                </span>
                <span
                    style={{ transform: "rotateX(-120deg) translateZ(20px)" }}
                >
                    modernos
                </span>
                <span
                    style={{ transform: "rotateX(-240deg) translateZ(20px)" }}
                >
                    innovadores
                </span>
            </div> desde 1990
        </h2>

        <section class="flex flex-wrap justify-center gap-6 py-4">
            <a
                href={contact.href}
                target="_blank"
                rel="noopener noreferrer"
                class={buttonVariants({
                    variant: "animate-border",
                    roundness: "full",
                })}
            >
                Solicitar presupuesto
            </a>

            <a href="#" class={buttonVariants({ variant: "foreground" })}>
                Explorar galería
            </a>
        </section>
    </section>
</main>
