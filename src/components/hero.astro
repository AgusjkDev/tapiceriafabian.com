---
import { Image } from "astro:assets";

import heroBgImage from "@/assets/imgs/hero-bg.jpg";
---

<main class="relative h-dvh">
    <Image
        alt="Auto deportivo color plata"
        src={heroBgImage}
        class="pointer-events-none absolute -z-10 size-full select-none object-cover brightness-50"
    />

    <div
        class="flex size-full animate-fade-in-down flex-col justify-center gap-y-6 p-6 text-white md:px-8 lg:px-16 xl:px-24 2xl:px-32"
    >
        <div class="flex flex-col gap-y-3">
            <h1 class="text-title uppercase">Tapicería Fabián</h1>
        </div>
        <h2 class="max-w-screen-sm text-pretty text-subtitle uppercase">
            Creando Interiores Premium Desde 1990
        </h2>
        <p class="max-w-screen-sm text-balance text-xl">
            Especialista en tapicería automotriz con mano de obra experta para
            el interior de tu vehículo&#46;
        </p>
        <div class="flex gap-x-3">
            <a
                href="#"
                class="grid animate-pulse place-items-center rounded-lg bg-white px-4 py-1.5 font-medium text-black transition-colors hover:bg-white/80"
            >
                Solicitar cotización
            </a>
            <a
                href="#"
                class="grid place-items-center rounded-lg border-2 border-white px-4 py-1.5 font-medium transition-colors hover:bg-white hover:text-black"
            >
                Ver trabajos
            </a>
        </div>
    </div>
</main>
