---
import Logo from "@/components/common/logo.astro";
import { buttonVariants } from "@/components/ui/button";
import { socials } from "@/config";
import { cn } from "@/lib/utils";
---

<footer class="flex flex-col items-center px-4" data-scroll-timeline>
    <div
        class="flex w-full max-w-md flex-col items-center gap-y-8 border-t py-32 lg:max-w-screen-xl lg:flex-row lg:justify-between lg:px-4"
    >
        <a href="/" class="transition-transform hover:scale-105">
            <Logo variant="foreground" />
        </a>

        <div class="flex flex-col gap-y-2">
            {
                socials.map(({ text, url, color, icon: Icon }) => (
                    <a
                        href={url}
                        target="_blank"
                        rel="noopener noreferrer"
                        class={cn(
                            buttonVariants({ variant: "outline" }),
                            "group justify-start transition-colors hover:text-[var(--social-color)]",
                        )}
                        style={{ "--social-color": color }}
                    >
                        <Icon className="fill-current" />
                        {text}
                    </a>
                ))
            }
        </div>
    </div>
</footer>
